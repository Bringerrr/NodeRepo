html
    head
        style
            include ./styles.css
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
        h1= title
        h3.status
            if validation && validation.status === true
                span success!
            if validation && validation.status === false
                span erorr!

        form(name="add-estimation", method="post")
            .form-row
                .col-md-4.mb-3
                    label(for='validationCustom01') Username
                    input#validationCustom01.form-control(type="text", name="username" value= fields.username )
                    if validation && validation.errors && validation.errors.username
                        .invalid-feedback= validation.errors.username
                .col-md-4.mb-3
                    label(for='validationCustom02') Last name
                    input#validationCustom02.form-control(type="text", name="password" value= fields.password )
                    if validation && validation.errors && validation.errors.password
                        .invalid-feedback= validation.errors.password

            button.btn.btn-primary(type='submit') Submit


    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js')